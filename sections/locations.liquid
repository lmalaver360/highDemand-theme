{{ "section-locations.css" | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div id="section-{{ section.id }}" class="locations section-{{ section.id }}-padding">
  <div class="locations__container">
    <div class="locations__container--map"></div>
    <div class="locations__container--title">
      {%- if section.settings.logo != blank -%}
        {%- assign logo_alt = section.settings.logo.alt | default: 'logo' | escape -%}
        {%- assign logo_height = section.settings.logo_width | divided_by: section.settings.logo.aspect_ratio -%}
        {{ section.settings.logo | image_url: width: section.settings.width | image_tag:
         class: 'location__heading-logo'
         , widths: '50, 100, 150, 200, 250, 300, 400, 500'
         , height: logo_height
         , width: section.settings.logo_width
         , alt: logo_alt
         }}
      {%- endif -%}
    </div>

  </div>
</div>


{% schema %}
  {
    "name": "t:sections.locations.name",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "t:sections.locations.settings.logo.label"
      }, {
        "type": "range",
        "id": "logo_width",
        "min": 50,
        "max": 250,
        "step": 10,
        "default": 100,
        "unit": "t:sections.locations.settings.logo_width.unit",
        "label": "t:sections.locations.settings.logo_width.label"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ],
    "presets": [
      {
        "name": "t:sections.locations.presets.name"
      }
    ]
  }
{% endschema %}